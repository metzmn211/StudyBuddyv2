<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mmlgdw.studybuddyv2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TakeQuiz"
            android:label="@string/title_activity_take_quiz"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".QuizActivity"
            android:label="@string/title_activity_quiz"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditQuiz"
            android:label="@string/title_activity_edit_quiz"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ViewFlashcards"
            android:label="@string/title_activity_view_flashcards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditFlashcards"
            android:label="@string/title_activity_edit_flashcards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>